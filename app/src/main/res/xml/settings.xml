<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceScreen
        android:key="setting_language"
        android:title="Language">

    </PreferenceScreen>

    <PreferenceCategory
        android:key="setting_game"
        android:title="Game display">

        <SwitchPreference
            android:defaultValue="true"
            android:key="board_coordinates"
            android:summary="Board coordinates (A-H, 1-8)" />


        <SwitchPreference
            android:key="drag_and_drop"
            android:summary="Drag and drop"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <ListPreference
        android:key="settings_board"
        android:title="Board"
        android:entries="@array/settings_board"
        android:entryValues="@array/listValues"
        android:defaultValue="@string/settings_classic_pieces">

    </ListPreference>

    <ListPreference
        android:key="settings_pieces"
        android:title="Pieces"
        android:entries="@array/settings_pieces"
        android:entryValues="@array/listValues"
        android:defaultValue="@string/settings_classic_pieces">

    </ListPreference>

    <PreferenceCategory
        android:key="setting_sounds"
        android:title="Sounds">

        <SwitchPreference
            android:key="status_sounds"
            android:summary="Do I enable sound?"
            android:defaultValue="true"/>

    </PreferenceCategory>


</PreferenceScreen>